
<div class="card">
  <div class="card-header">
    <a href="{{ url }}">
      <img src="{{feature_image}}" alt="" class="card-img-top">
    </a>
  </div>
  <div class="card-body">
    <h5 class="card-title">
      <a target="_blank" href="{{ url }}" >{{title}}</a>
    </h5>
    <p class="card-text">{{content}}</p>
    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>

  </div>
  <div class="card-footer">
    <h6>
      <a target="_blank" class="btn btn-link btn-danger btn-round" href="{{ url }}">Read more</a>
    </h6>
  </div>
</div>
